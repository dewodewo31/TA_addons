<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="role_template" name="Pick Role Page">
    <t t-call="website.layout">
      <t t-call="custom_TA.assets_css"/>
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
      <!-- Bootstrap CSS -->
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
      <!-- Owl Carousel CSS -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css"/>
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css"/>
      <!-- Font Awesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
      <style>
        .custom-button {
            min-height: 120px;
            width: 30%;
            height: 100%;
            font-weight: bold;
            font-size: 29px;
        }
        /* Custom CSS untuk lingkaran profil */
        .profile-circle {
          width: 40px;
          height: 40px;
          border-radius: 50%; /* Membuat bentuk lingkaran */
          border: 2px solid red; /* Border merah */
          background-color: #f8f9fa; /* Warna background lingkaran */
          display: flex;
          align-items: center;
          justify-content: center;
          overflow: hidden; /* Memastikan gambar tidak keluar dari lingkaran */
        }

        .profile-circle img {
          width: 100%;
          height: auto;
        }
      </style>


      <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
        <div class="container-fluid">
          <!-- Brand/Logo -->
          <a class="navbar-brand" href="#">
            <img src="/custom_TA/static/src/img/home/TA.png" alt="Logo" style="height: 40px; width: 140px;"/>
          </a>
          <!-- Toggle Button untuk Mobile -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Navbar Content -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Menu Navigasi di Tengah -->
            <ul class="navbar-nav mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" href="/home_page">HOME</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">ABOUT</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">SERVICES</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">CLIENT</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">CAREER</a>
              </li>
            </ul>
            <!-- Button Contact Us dan Profil -->
            <div class="d-flex align-items-center ms-auto">
              <button class="btn btn-outline-primary me-3" style="background-color: red;color: #fff;border: 2px #fff;padding: 10px 25px">CONTACT US</button>
              <a href="/role_page" class="profile-circle">
                <img src="https://via.placeholder.com/40" alt="Profil"/>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <div class="col-12 p-5">
        <a href="/car_page" style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 8px;">
          <i class="fa fa-arrow-left" style="font-size: 20px;"></i>
          <span style="font-size: 16px; font-family: Arial, sans-serif;">Kembali</span>
        </a>
      </div>


      <div class="container-fluid d-flex justify-content-center align-items-center" style="padding-top: 50px;padding-bottom: 150px;">
        <div class="col-12 d-flex flex-column align-items-center">
          <h1 style="font-weight: bold">Choose Your Role:</h1>
          <div class="col-10 d-flex flex-column align-items-center mt-3">
            <!-- Tombol Car Owner -->
            <button class="btn btn-danger btn-lg mb-3 custom-button" data-bs-toggle="modal" data-bs-target="#carOwnerModal">
                Car Owner
            </button>
            <span>or</span>
            <!-- Tombol Business Owner -->
            <button class="btn btn-danger btn-lg mt-3 custom-button" data-bs-toggle="modal" data-bs-target="#businessOwnerModal">
                Business Owner
            </button>
          </div>
        </div>
      </div>

      <!-- Modal untuk Car Owner -->
      <div class="modal fade" id="carOwnerModal" tabindex="-1" aria-labelledby="carOwnerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="carOwnerModalLabel">Data Pencarian Car Owner</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input type="text" class="form-control mb-2" placeholder="Masukan Auth Pass Anda..." id="carOwnerPassword"/>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-danger" onclick="searchCarOwner()">Search</button>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal untuk Business Owner -->
      <div class="modal fade" id="businessOwnerModal" tabindex="-1" aria-labelledby="businessOwnerModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="businessOwnerModalLabel">Data Pencarian Business Owner</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <input type="text" class="form-control mb-2" placeholder="Masukan Auth Pass Anda..." id="businessOwnerPassword"/>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-danger" onclick="searchBusinessOwner()">Search</button>
            </div>
          </div>
        </div>
      </div>





      <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
      <!-- Owl Carousel JS -->
      <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
      <!-- Bootstrap JS Bundle with Popper -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

      <t t-call="custom_TA.assets_js"/>
    </t>


  </template>

  <record id="action_pick_page" model="ir.actions.act_url">
    <field name="name">Pick Role Page</field>
    <field name="url">/role_page</field>
    <field name="target">self</field>
  </record>

</odoo>

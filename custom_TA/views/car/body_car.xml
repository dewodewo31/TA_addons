        .testimonial-card {
            max-width: 700px !important;
            margin: 0 auto;
            border: 1px solid #eee;
            border-radius: 15px;
            background-color: #fff;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: row;
        }
        
